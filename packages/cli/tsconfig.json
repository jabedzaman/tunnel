{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "baseUrl": "./",
    "paths": { "~/*": ["./src/*"] },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
